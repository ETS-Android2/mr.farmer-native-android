<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.User" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/grey</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/custom_toolbar</item>
    </style>

    <style name="Splashtheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/grey</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="signin_theme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:statusBarColor">@color/grey</item>
    </style>

    <style name="custom_toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/black</item>
    </style>
</resources>