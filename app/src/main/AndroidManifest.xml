<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.snag.ink.user">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.User"
        tools:replace="android:theme">
        <activity
            android:name=".activity.Additemactivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/signin_theme" />
        <activity
            android:name=".activity.SplashActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Splashtheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Signin"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/signin_theme" />
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MerchantActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/signin_theme" />
        <activity
            android:name=".activity.CartActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/signin_theme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.AccountActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/signin_theme" />
        <activity
            android:name=".activity.MapsActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_maps"
            android:screenOrientation="portrait"
            android:theme="@style/signin_theme" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.razorpay.Apikey"
            android:value="rzp_live_aFajm4o35EwpRk" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/snackbox" />
    </application>

</manifest>